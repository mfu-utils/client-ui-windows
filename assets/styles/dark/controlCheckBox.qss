QCheckBox {
    background-color: #3574f0;
    spacing: 0;
    border-radius: 5px;
}

QCheckBox:disabled {
    border: 1px solid #43454A;
    background-color: #43454A;
}

QCheckBox:indicator {
    margin: 3px;
    width: 12px;
    height: 12px;
    border-radius: 5px;
}

QCheckBox:indicator:checked {
    image: url({{ checked }});
}

QCheckBox:indicator:unchecked {
    background-color: transparent;
}

#AbstractControlItemLabel[primary="true"] {
    color: #3574F0;
}