QMenu {
    background-color: #2B2D30;
    padding: 5px;
    border: 1px solid #43454A;
    border-radius: 7px;
    color: white;
}

QMenu::item {
    background-color: transparent;
    padding: 5px;
    border-radius: 5px;
}

QMenu::item:selected {
    background-color: #2E436E;
}

QMenu::item:disabled {
    color: #595959;
}

QMenu::separator {
    height: 1px;
    background-color: #464749;
    margin: 5px 10px;
}

QMenu::icon {
    padding-left: 10px;
}